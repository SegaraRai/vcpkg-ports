---
import headCommit from '../../virtual/headCommit.mjs';
import portNames from '../../virtual/portNames.mjs';
import DateTime from '../DateTime.vue';
import LinkVcpkgCommit from '../LinkVcpkgCommit.astro';
---

<footer
  class=":uno: mt-auto flex-none flex lt-sm:flex-col-reverse items-center justify-end gap-x-4 gap-y-2 px-5 py-2 border-t-1 border-[--theme-divider] leading-tight text-[--theme-text-light]"
>
  <div class=":uno: flex-none flex gap-x-4" data-nosnippet>
    <span class=":uno: flex-none">
      <span translate="no">vcpkg</span>
      <LinkVcpkgCommit class="link" commit={headCommit.oid} type="tree" />
      <span>
        (<DateTime client:load timestamp={headCommit.committer[0]} />)
      </span>
    </span>
    <span
      class=":uno: flex-none select-none border-l-1 border-[--theme-divider]"
    ></span>
    <span
      class=":uno: flex-none lt-sm:hidden"
      set:text={`${portNames.length} ports`}
    />
  </div>
</footer>
