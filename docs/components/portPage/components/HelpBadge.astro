---
interface Props {
  readonly href?: string | undefined;
  readonly label?: string | undefined;
  readonly title?: string | undefined;
}

const { href, label, title } = Astro.props;
---

{
  href ? (
    <a
      class=":uno: flex-none inline-block select-none text-85% i-mdi-help"
      href={href}
      title={title}
      aria-label={label}
      target="_blank"
      rel="noreferrer"
    />
  ) : (
    <span
      class=":uno: flex-none inline-block select-none text-85% i-mdi-help"
      title={title}
      aria-label={label}
    />
  )
}
