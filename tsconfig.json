{
  "extends": "astro/tsconfigs/strictest",
  "compilerOptions": {
    "noEmit": true,
    "checkJs": true,
    "jsx": "preserve",
    "skipLibCheck": true,
    "noUncheckedIndexedAccess": false,
    "verbatimModuleSyntax": true,
    // hack for critters
    "resolvePackageJsonExports": false,
    "lib": [
      "ES2022",
      "DOM",
      "DOM.Iterable",
    ],
    "types": [
      "unplugin-icons/types/vue",
      "vite/client",
    ],
  },
  "exclude": [
    ".vcpkg",
    "dist",
    "node_modules",
  ],
}
